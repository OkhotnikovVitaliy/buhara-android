<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
        android:font="@font/cera_pro_regular"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/cera_pro_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- medium -->
    <font
        android:font="@font/cera_pro_medium"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/cera_pro_medium"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- light -->
    <font
        android:font="@font/cera_pro_light"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/cera_pro_light"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- thin -->
    <font
        android:font="@font/cera_pro_thin"
        android:fontStyle="normal"
        android:fontWeight="400"
        app:font="@font/cera_pro_thin"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- italic -->
    <font
        android:font="@font/cera_pro_regular_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/cera_pro_regular_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!-- bold -->
    <font
        android:font="@font/cera_pro_bold"
        android:fontStyle="normal"
        android:fontWeight="700"
        app:font="@font/cera_pro_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

</font-family>
